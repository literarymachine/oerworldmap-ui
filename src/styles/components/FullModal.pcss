@import '../colors.pcss';
@import '../variables.pcss';

.FullModal {
  position: fixed;
  top: 0;
  left: 0;
  background-color: color(var(--black) a(15%));
  width: 100%;
  height: 100%;
  z-index: 4;
  overflow: auto;

  & .modalDialog {
    background-color: var(--white);
    max-width: 600px;
    margin: 30px auto;
    box-shadow: 0 5px 15px color(var(--black) a(50%));
    padding: 20px;
    border: 1px solid var(--blue-dark);
    border-radius: 2px;
    position: relative;

    & .closeModal {
      position: absolute;
      right: 20px;
      top: 15px;
      border: none;
      color: var(--blue-dark);
      background-color: transparent;

      & i {
        pointer-events: none;
      }

      &:hover {
        color: var(--orange);
      }
    }
  }

  @media print {
    position: relative;
    background-color: transparent;

    & .modalDialog {
      box-shadow: none;
      border: none;
      max-width: 100%;
      margin: 0;

      & .more {
        display: none;
      }
    }

    & .closeModal {
      display: none;
    }
  }

  @media screen and (--mobile-breakpoint) {
    position: absolute;

    & .modalDialog {
      height: 100%;
      overflow: auto;
      box-shadow: none;
      border: none;
      max-width: 100%;
      margin: 0;
      border-radius: 0;
    }
  }
}
